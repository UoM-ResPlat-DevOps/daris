<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>make-zip</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>${project.parent.artifactId}-${project.parent.version}</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useStrictFiltering>true</useStrictFiltering>
			<outputDirectory>.</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<scope>compile</scope>
			<includes>
				<include>${project.groupId}:daris-commons</include>
				<include>${project.groupId}:daris-dcmtools</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.parent.basedir}/daris-essentials/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-core-services/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-portal/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-transcoders/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-sinks/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-analyzers/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-server-config/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-server-config-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-pvupload/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-pvupload-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-mbcpetct-upload/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-mbcpetct-upload-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-mbcpetct-download/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-mbcpetct-download-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-mbcpetct-dicom-retrieve/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-mbcpetct-dicom-retrieve-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-mbcmr-upload/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-mbcmr-upload-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-client-dicom-client/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>daris-client-dicom-client-*.zip</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/index.html</source>
			<outputDirectory>.</outputDirectory>
		</file>
	</files>
</assembly>