<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>installer-jar</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useStrictFiltering>true</useStrictFiltering>
			<outputDirectory>.</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<scope>runtime</scope>
			<includes>
			    <include>au.edu.unimelb.daris:daris-distribution</include>
				<include>com.arcitecta:mfclient</include>
				<include>commons-cli:commons-cli</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.parent.basedir}/daris-essentials/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-core-services/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-portal/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-transcoders/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-sinks/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/daris-analyzers/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>mfpkg-*.zip</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>